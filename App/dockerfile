# Copier les fichiers de dépendances
COPY package*.json ./

# Installer les dépendances
# RUN npm install
RUN npm ci --only=development

# Copier tout le code source
COPY . .

# Construire l'application
# RUN VITE_PHOTO_URL=${VITE_PHOTO_URL} VPS_TRAEFIK_URL=${VPS_TRAEFIK_URL}  VPS_ADMINER_URL=${VPS_ADMINER_URL}  VPS_API_URL=${VPS_API_URL} VPS_EMAIL=${VPS_EMAIL}  VPS_APP_URL=${VPS_APP_URL} VITE_API_URL=${VITE_API_URL}  DOMAIN=${DOMAIN} npm run build
